<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_main_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/btn_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="btn_recyclerview"/>
        <Button
            android:id="@+id/btn_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_listview"/>
        <Button
            android:id="@+id/btn_flexbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_flexbox"/>
        <Button
            android:id="@+id/btn_selectmanager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_selectmanager"/>
        <Button
            android:id="@+id/btn_sdgridviewpageractivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btn_sdgridviewpageractivity"/>
        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="200dp"
            android:text="btn"/>

        <FrameLayout
            android:id="@+id/fl_container_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


</LinearLayout>